.location__map
  width 100%
  height 29.14vw
  background  #4eb7a8
  border-radius 5px 5px 0 0
.location__bar
  position relative
  display flex
  align-items  center
  width 100%
  height 9.86vw
  background #e75735
  border-radius 0 0 5px 5px
.location__message
  display inline-block
  font-family 'Conv_Lato-Light'
  font-size 4.28vw
  color #ffffff
  margin-left 3.85vw
.location__address
  display inline-block
  font-family 'Conv_Lato-Black'
  font-size 1.78vw
  color #ffffff
  width 20vw
  margin-left 2.85vw
.location__button-container
  position absolute
  right 0
  height 4.57vw
  width 12vw
.location__button
  display inline-block
  border none 
  outline none 
  cursor pointer
  background #e75735
  border-radius 5px
  color #ffffff
  height 4.57vw
  width 4.57vw
  float right
  margin-right 5%
  font-size 3vw
  &:active
    background #bf3e1f
  