.news
  display flex
  width 555px
  height 405px
  @media only screen and (max-width 800px)
    width 288px
    height 212px
  &__image-container
    float left
    width 32.99%
  &__image
    width 100%
    height 100%
    border-radius 5px 0 0 5px
  &__content
    float left
    width 67.01%
    border-radius 0 5px 5px 0
    background #e75735
    color #ffffff
    padding 42px 46px 0 44px
    @media only screen and (max-width 800px)
      padding 22px 0 0 22px
  &__title
    font-family 'Lato', Arial, sans-serif
    font-weight 300
    font-style normal
    font-size 5.4rem
    @media only screen and (max-width 800px)
      font-size 2.8rem
  &__date
    font-size 2.1rem
    margin-top 2.1rem
    @media only screen and (max-width 800px)
      font-size 1.1rem
      margin-top 1.1rem
  &__text
    font-family 'Lato', Arial, sans-serif
    font-weight 400
    font-style normal
    font-size 2.1rem
    margin-top 2.9rem
    @media only screen and (max-width 800px)
      font-size 1.1rem
      margin-top 1.6rem