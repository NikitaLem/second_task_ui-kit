.news
    display flex
    width 41.14vw
    height 30vw
    &__image
        float left
        width 32.99%
        border-radius 5px 0 0 5px
        background url('../images/12.jpg') 50% 50% no-repeat
        background-size cover
    &__content
        float left
        width 67.01%
        border-radius 0 5px 5px 0
        background #e75735
        color #ffffff
        padding 3.14vw 3.43vw 0 3.28vw
    &__header
        font-family 'Conv_Lato-Light'
        font-size 4vw
    &__date
        font-family 'Conv_Lato-Black'
        font-size 1.57vw
        margin-top 1.57vw
    &__text
        font-family 'Conv_Lato-Regular'
        font-size 1.57vw
        margin-top 2.14vw