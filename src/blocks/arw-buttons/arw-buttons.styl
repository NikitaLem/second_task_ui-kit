.arw-btn
  width 44px
  height 44px
  outline none
  cursor pointer
  border-radius 50%
  &_white
    background-color #fff
    border #4eb7a8 solid 2px
    &:after
      content ''
      border solid #4eb7a8
      display inline-block
      padding 6px
      border-width 0 2px 2px 0
    &:active
      background-color #4eb7a8
      border #4eb7a8 solid 2px
      &:after
        border-color #fff
  &_green
    background-color #4eb7a8
    border #4eb7a8 solid 2px
    &:after
      content ''
      border solid #fff
      display inline-block
      padding 6px
      border-width 0 2px 2px 0
    &:active
      background-color #fff
      border #4eb7a8 solid 2px
      &:after
        border-color #4eb7a8
  &_grey
    background-color #e5e5e5
    border #e5e5e5 solid 2px
    &:after
      content ''
      border solid #fff
      display inline-block
      padding 6px
      border-width 0 2px 2px 0
  &_left
    transform rotate(135deg)
  &_right
    transform rotate(-45deg)
    