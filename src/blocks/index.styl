@import '/buttons/buttons.styl'
@import '/arw-buttons/arw-buttons.styl'
@import 'fonts.styl'

*
    box-sizing border-box
body
    margin 0
    padding 0
.wrapper
    display flex
    &_space-left
        flex-basis 7.57vw
    &_grid
        flex-basis 84.86vw
    &_space-right
        flex-basis 7.57vw
.head
    text-align center
    font-family 'Conv_Lato-Black'
    font-size 18px
    color #4f4f4f
.wrapper__buttons
    display flex
    flex-direction column
    margin-top 5%
.buttons__item
    display flex
    align-items flex-end
    justify-content center
    margin-top 20px
    &_big-margin
        margin-top 5%
.btn, .arw-btn
    margin 0 12px 0 12px
.charts-wrapper
    position relative
    height 13.57vw
    width 13.57vw
    margin-top: 20px