@import '/buttons/buttons.styl'
@import 'fonts.styl'

*
    box-sizing border-box
body
    margin 0
    padding 0
.wrapper
    display flex
    &_space-left
        flex-basis 7.57vw
    &_grid
        flex-basis 84.86vw
    &_space-right
        flex-basis 7.57vw
.buttons__head
    text-align center
    font-family 'Conv_Lato-Black'
    font-size 18px
    color #4f4f4f
.wrapper__buttons
    display flex
    flex-direction column
    margin-top 5%
.buttons__item
    display flex
    align-items flex-end
    justify-content center
    margin-top 20px
    &_no-margin
        margin-top 5%
.btn
    margin 0 10px 0 10px