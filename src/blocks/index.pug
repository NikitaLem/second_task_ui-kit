<!DOCTYPE html>
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(name="description" content="Create a set of standard web page elements")
        meta(name="keywords" content="html, css, ui-kit, buttons, sliders, forms")
        meta(http-equiv="X-UA-Compatible", content="ie=edge")
        link(rel="apple-touch-icon" sizes="180x180" href="/favicons/apple-touch-icon.png")
        link(rel="icon" type="image/png" sizes="32x32" href="/favicons/favicon-32x32.png")
        link(rel="icon" type="image/png" sizes="16x16" href="/favicons/favicon-16x16.png")
        link(rel="manifest" href="/favicons/site.webmanifest")
        link(rel="mask-icon" href="/favicons/safari-pinned-tab.svg" color="#5bbad5")
        meta(name="msapplication-TileColor" content="#da532c")
        meta(name="theme-color" content="#ffffff")
        title UI-Kit
    body
        include ./buttons/buttons.pug
        include ./arw-buttons/arw-buttons.pug
        include ./prc-charts/prc-charts.pug
        include ./sliders/sliders.pug
        include ./stages/stages.pug
        include ./form-elements/form/form-elements.pug
        include ./form-elements/toggles/toggles.pug
        include ./form-elements/thick-boxes/thick-boxes.pug
        include ./search/search/search.pug
        include ./search/drop-down/drop-down.pug
        include ./user-profile/user-profile.pug
        include ./news/events/events.pug
        include ./news/news/news.pug
        include ./calendar/calendar.pug
        include ./messaging/messaging.pug
        include ./video/video.pug
        .wrapper
            section.flex-container.flex-container_flex-dir-col
                header.head standart buttons
                .buttons__item.buttons__item_big-margin
                    +buttons("s", "green", "", "button")
                    +buttons("b", "green", "", "button")
                    +buttons("b", "red", "", "button")
                    +buttons("s", "red", "", "button")            
                .buttons__item
                    +buttons("s", "green", "border-bottom", "button")
                    +buttons("b", "green", "border-bottom", "button")
                    +buttons("b", "red", "border-bottom", "button")
                    +buttons("s", "red", "border-bottom", "button") 
                .buttons__item
                    +buttons("s", "green", "empty", "button")
                    +buttons("b", "green", "empty", "button")
                    +buttons("b", "red", "empty", "button")
                    +buttons("s", "red", "empty", "button") 
            section.container
                header.head arrows buttons
                .buttons__item.buttons__item_big-margin
                    +arw-buttons("white", "left")
                    +arw-buttons("white", "right")
                    +arw-buttons("grey", "left")
                    +arw-buttons("grey", "right")
                    +arw-buttons("green", "left")
                    +arw-buttons("green", "right")
            section.container
                header.head percentages/pie-chart
                .charts-wrapper
                    .charts-item
                        +prcChart("0","1") 
                    .charts-item
                        +prcChart("38","1")
                    .charts-item
                        +prcChart("62","1")
                    .charts-item
                        +prcChart("89","1")
                    .charts-item.charts-item_pie
                        include ./prc-charts/pie-charts.pug
            section.container
                header.head sliders
                .flex-container.flex-container_justified-between
                    .sliders__item
                        +slider("red", "no", "popup")
                    .sliders__item
                        +slider("green", "true", "track")
            section.container
                header.head stages
                .container
                    +stages('5')
                    .container
                        input(type="number" id="test" min="0")
            section.container
                header.head form elements
                .flex-container
                    section.form-container
                        +form("green", "border-bottom")
                    section.toggles-boxes-container
                        header.head toggles
                        .flex-container
                            .toggles-boxes-item
                                +toggles()
                            .toggles-boxes-item
                                +toggles("checked")
                        header.head thick boxes
                        .flex-container
                            .toggles-boxes-item
                                +thick-boxes("checked")
                            .toggles-boxes-item
                                +thick-boxes()
            section.responsive-flex-container
                section.search-profile-container
                    header.head search / drop down
                    .flex-container.flex-container_flex-dir-col
                        .search-item.search-item_no-margin
                            +search("grey","Search")
                        .search-item
                            +search("red","I've not found what I'm looking for...")
                        .search-item
                            +drop-down("option1", "option2", "option3", "option4")
                section.search-profile-container
                    header.head user profile
                    .flex-container.flex-container_justified-center
                        +user-profile("grey-orange","../images/10.png", "Alex Orange", "ULTRAVIOLANCER")
                    .flex-container.flex-container_justified-center
                        +user-profile("green-white", "../images/11.png", "Zigmund Freid", "WEB DESIGNER")
            section.flex-container.flex-container_flex-dir-col
                header.head news & events
                .responsive-flex-container
                    .news__item
                        +news("24 AUGUST 2013","It's all going downhill","Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed condimentum aliquet venenatis. Etiam a nisi nunc, a tincidunt eros.", "./images/12.jpg")
                    .events__item
                        +events("24","Aug","THIS IS THE TITLE", "Lorem ipsum dolor sit amet, consectetur adipiscing elit.", "./images/event-pic.jpg")
            section.flex-container.flex-container_flex-dir-col
                header.head location
                .container
                    include ./location/location.pug
            section.flex-container
                .calendar-messaging__wrapper
                    header.head calendar
                    .container
                        +calendar()
                .calendar-messaging__wrapper
                    header.head messaging
                    .container
                        +messaging("Константин Константинопольский", "../images/15.jpg")
            section.flex-container.flex-container_flex-dir-col
                header.head video
                .video__container
                    +video()