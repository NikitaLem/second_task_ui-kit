@media only screen and (max-width: 600px)
    $circles
        flex-shrink 0
        background-color #3d6cb0
        border-radius 50%
        position relative                                          
        background-repeat no-repeat
        background-position 50% 50%
        background-size 60% auto
        height 4.5em
        width 4.5em
    $header_names
        font-family "MyriadPro Bold"
        font-size 2.3em
        color #3d6cb0
        padding-left 15px

    $header_lines
        margin 0 0 0 10px
        height 8px
        flex-grow 1
        background-color #3d6cb0
    $textes
        font-family 'MyriadPro Regular'
        font-size 1em
        text-align left
    $software_level
        display inline-block
        height 0.7em
    .wrapper
        display flex
        flex-direction column
        margin 0 3% 7.7vw 3%
    .space-left
        display none
    .space-middle
        display none
    .space-right
        display none
    .names
        display flex
        align-items center
        flex-direction column
        margin-top 8.3vw
        &__circle
            flex-shrink 0
            background-color #3d6cb0
            border-radius 50%
            position relative
            height 10em
            width 10em
            &:before
                content " "
                position absolute
                z-index 1
                top -7%
                left -7%
                right -7%
                bottom -7%
                border 1px solid #3d6cb0
                border-radius 50%
        &__list
            text-align center
            margin-top 4.27vw
        &__first-name
            font-family 'Myriad Pro Light SemiExtended'
            font-size 3.5em
            line-height 0.71
        &__surname
            font-family "MyriadPro Bold"
            font-size 4em
            line-height 0.71
            margin-top 1.169vw
        &__vacancy
            font-family 'MyriadPro BlackSemiCn'
            font-size 1.7em
            margin-top 1.85vw
            line-height 0.71
    .profile_margin
        margin-top 6.935vw
    .header__circle_profile
        background-image url("../images/Profile_img.png")
    .profile
        &__text
            @extends $textes
            margin-top 15px
    .contact_margin
        margin-top 4.153vw
    .header__circle_contact
        background-image url("../images/Contact_img.png")
    .contact
        &__item
            display flex
            justify-content space-around
            margin-top 2.98vw
        &__name
            color #3d6cb0
            font-family "MyriadPro Bold"
            font-size 1.66em
            flex-basis 30%
        &__value
            flex-basis 70%
            font-family 'MyriadPro Regular'
            font-size 1.66em
    .contact__item_first
        display flex
        justify-content space-around
        margin-top 3.0645vw
    .skills_margin
        margin-top 4.31vw
    .header__circle_skills
        background-image url("../images/Skills_img.png")
    .skills
        &__body
            display flex
            flex-direction column
            align-items center
        &__item
            margin-top 1.81vw
        &__name
            text-align center
            font-family 'MyriadPro Regular'
            font-size 1.6em
            padding-bottom 0.887vw
        &__value
            display flex
            justify-content space-between
            margin 0
            padding 0
            width 400px
    .value__circle
        border-radius 50%
        height 1.41em
        width 1.41em
        background-color #3d6cb0
    .value__circle_empty
        background-color #e6e6e6
    .skills__item_first
        margin-top 2.34vw
    .education_margin
        margin-top 6.45vw
    .header__circle_education
        background-image url("../images/Education_img.png")
    .education
        &__item
            display flex
            margin-left 0.62vw
            margin-top 20px
        &__dot
            flex-shrink 0
            height 1.3em
            width 1.3em
            border-radius 50%
            background-color black
        &__wrapper
            margin-left 1.77vw
        &__degree
            display block
            .level
                font-family "MyriadPro Bold"
                color #3d6cb0
                font-size 1.5em
                line-height 0.7em
            .date
                font-family 'MyriadPro Regular'
                margin-left 30px
                font-size 1.5em
                line-height 0.7em
            .university
                display block
                font-family 'MyriadPro Regular'
                margin-top 10px
                font-size 1.5em
                line-height 0.7em
        &__text
            @extends $textes
            margin-top 15px
    .education__item_first
        margin-top 2.9vw 
    .experience_margin
        margin-top 4.8vw
    .header__circle_experience
        background-image url("../images/Experience_img.png")   
    .experience
        &__item
            display flex
            margin-left 0.62vw
            margin-top 20px
        &__dot
            flex-shrink 0
            height 1.3em
            width 1.3em
            border-radius 50%
            background-color black
        &__wrapper
            margin-left 1.77vw
        &__degree
            display block
            .level
                font-family 'MyriadPro Bold'
                font-size 1.5em
                line-height 0.7em
            .date
                font-family 'MyriadPro Regular'
                margin-left 30px
                font-size 1.5em
                line-height 0.7em
            .university
                display block
                font-family 'MyriadPro Regular'
                margin-top 10px
                font-size 1.5em
                line-height 0.7em
        &__text
            @extends $textes
            margin-top 15px
    .experience__item_first
        margin-top 4.15vw 
    .software_margin
        margin-top 4.8vw
    .header__circle_software
        background-image url("../images/Software_img.png")        
    .software
        &__body
            display flex
            justify-content space-around
            margin-top 3.1vw
        &__body-left,
        &__body-right
            flex-basis 40%
            justify-content start
            flex-direction column
        &__item
            margin-top 2.21vw
             &_first
                margin-top 0
        &__name
            font-family 'MyriadPro Regular'
            font-size 1.5em
        &__level
            display flex
            flex-wrap nowrap
            margin-top 1.41vw
    .full_photoshop
        @extends $software_level
        background-color #3d6cb0
        width 95%
    .full_illustrator
        @extends $software_level
        background-color #3d6cb0
        width 70%
    .full_indesign
        @extends $software_level
        background-color #3d6cb0
        width 50%
    .full_dreamweaver
        @extends $software_level
        background-color #3d6cb0
        width 85%
    .full_aftereffects
        @extends $software_level
        background-color #3d6cb0
        width 60%
    .full_htmlcss
        @extends $software_level
        background-color #3d6cb0
        width 95%
    .empty
        @extends $software_level
        background-color #e6e6e6
        flex-grow 1