.drop-down
  display inline-block
  position relative
.drop-down__input
  -webkit-appearance none
  -moz-appearance none
  border none
  border-radius 5px
  width 288px
  padding 5px 0 7px 8px
  font-family 'SourceSansPro', Arial, sans-serif
  font-size 1.4rem
  background -webkit-linear-gradient(left, #e5e5e5 0%, #e5e5e5 89%, #4eb7a8 89%, #4eb7a8 100%)
  color #888888
  cursor pointer
.drop-down:after
  position absolute
  top 25%
  right 4%
  content ""
  border solid #fff
  padding 0 8px 8px 0
  border-width 0 2px 2px 0
  pointer-events none
  transform rotate(45deg)