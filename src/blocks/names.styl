.names_margin
    margin-top 8.3vw
.names
    display flex
    align-items center
    flex-direction column
    &__circle
        flex-shrink 0
        background-color #3d6cb0
        border-radius 50%
        position relative
        height 16.33vw
        width 16.33vw
        &:before
            content " "
            position absolute
            z-index 1
            top -7%
            left -7%
            right -7%
            bottom -7%
            border 1px solid #3d6cb0
            border-radius 50%
    &__list
        text-align center
        margin-top 4.27vw
    &__first-name
        font-family 'Myriad Pro Light SemiExtended'
        font-size 4.21vw
        line-height 0.71
    &__surname
        font-family "MyriadPro Bold"
        font-size 4.98vw
        line-height 0.71
        margin-top 1.169vw
    &__vacancy
        font-family 'MyriadPro BlackSemiCn'
        font-size 2vw
        margin-top 1.85vw
        line-height 0.71