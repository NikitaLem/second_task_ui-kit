.messaging__header
  position relative
  width 288px
  min-height 116px
  padding 23px 0 49px 0
  border-radius 4px 4px 0 0
  background -webkit-linear-gradient(top, #4eb7a8 0%, #4eb7a8 71%, #46ab9d 71%, #46ab9d 100%)
  background -moz-linear-gradient(top, #4eb7a8 0%, #4eb7a8 71%, #46ab9d 71%, #46ab9d 100%)
  display flex
  flex-direction column
  align-items center    
.messaging__name
  font-family 'Lato', Arial, sans-serif
  font-weight 400
  font-style normal
  font-size 1.8rem
  text-align center
  color #ffffff
.messaging__avatar-container
  width 84px
  height 84px
  border #e5e5e5 solid
  border-width 4px
  border-radius 50%
  position absolute
  top (100% - @height/2 + @border-width)
  z-index 999
.messaging__avatar
  width 100%
  height 100%
  border-radius 50%
.messaging__body
  width 288px
  background #f2f2f2
  border-radius 0 0 4px 4px
  padding 23px 22px 42px 22px
.messaging__icons
  font-size 1.6rem
  color #8e8d8d
  display flex
  justify-content space-between
  margin 0 5px
.icons:hover
  cursor pointer
  color #46ab9d
.messaging__chat-box
  margin-top 9px
  max-height 75px
  overflow-y auto
  overflow-x hidden
  &::-webkit-scrollbar
    position absolute
    left 120%
    top 0
    width 5px
  &::-webkit-scrollbar-track
    background #f2f2f2
  &::-webkit-scrollbar-thumb
    background #8e8d8d
    height 5px
    border-radius 2px
.messaging__text-box
  font-size 1.25rem
  color #868686
  position relative
  width 243px
  min-height 69px
  background #ffffff
  margin-top 15px
  border-radius 4px
  padding 18px
  outline none
  &:first-child
    margin-top 6px
  &_received
    overflow-wrap break-word
    &::-webkit-scrollbar
      width 5px
    &::-webkit-scrollbar-track
      background #f2f2f2
    &::-webkit-scrollbar-thumb
      background #8e8d8d
      height 5px
      border-radius 2px
    &:before
      content ''
      border-style solid
      border-width 6px
      border-color transparent transparent #fff transparent
      position absolute
      bottom 100%
      left (50% - @border-width/2)
  &_sent
    background #e5e5e5
    border #ffffff solid 2px
    box-sizing border-box
    height 88px
    overflow-y auto
    overflow-x hidden
    &::-webkit-scrollbar
      position absolute
      left 120%
      top 0
      width 5px
    &::-webkit-scrollbar-track
      background #f2f2f2
    &::-webkit-scrollbar-thumb
      background #8e8d8d
      height 5px
      border-radius 2px
.messaging__button
  box-sizing border-box
  border-radius 3px
  cursor pointer
  border none
  font-family 'Lato', Arial, sans-serif
  font-weight 900
  font-style normal
  font-size 1.2rem
  color #fff
  background-color #4eb7a8
  border-bottom #28a290 solid 3px
  width 243px
  height 35px
  margin-top 15px
  &:active
    color #4eb7a8
    background-color #ffffff
    border #28a290 solid
    border-width 1px 1px 3px 1px